.container
  #signupbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2{:style => "margin-top:50px"}
    .panel.panel-info
      .panel-heading
        .panel-title Sign Up
        %div{:style => "float:right; font-size: 85%; position: relative; top:-10px"}
          = link_to "Sign in", new_session_path(resource_name)
      .panel-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f|
          - unless devise_error_messages!.blank?
            #signupalert.alert.alert-danger
              = devise_error_messages!
          .form-group
            .field
              = f.label :email, class: "col-md-3 control-label"
              .col-md-9
                = f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control"
          .form-group
            .field
              = f.label :password, class: "col-md-3 control-label"
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              .col-md-9
                = f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control"
          .form-group
            .field
              = f.label :password_confirmation, "Confirm Password", class: "col-md-3 control-label"
              .col-md-9
                = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "form-control"
          .form-group
            / Button
            .col-md-offset-3.col-md-9
              = f.submit "Sign up", class: "btn btn-info"
              %span{:style => "margin-left:8px;"}
